@model List<FlowerItem>
 @foreach(var item in Model)
      {
                <div class="col-md-6 col-lg-3">
                    <div class="item text-center">
                        <div class="img">
                            <img src="~/img/@item.ImageName" class="img-fluid rounded-circle" style="width:200px;height:200px" alt="">
                    </div>
                     <div class="text mt-3">
                           <h6>@item.ExpertName</h6>
                       <p class="text-black-50">@item.ExpertProfession</p>
                       </div>
                    </div>
                </div>
      }
            
        


