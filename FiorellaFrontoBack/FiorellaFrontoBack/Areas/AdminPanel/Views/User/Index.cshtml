@model List<UserViewModel>
    @{
        ViewData["Title"] = "Index";
    }

    <div class="row">
        <div class="col-md-12 stretch-card">
            <div class="card">
                <div class="card-body">
                    <p class="card-title">Recent Purchases</p>
                    <div class="table-responsive">
                        <table id="recent-purchases-listing" class="table">
                            <thead>
                                <tr>
                                    <th>FullName</th>
                                    <th>UserName</th>
                                    <th>Email</th>
                                    <th>Role</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td> @item.FullName</td>
                                        <td>@item.UserName</td>
                                        <td>@item.Email</td>
                                        <td>@item.Role</td>
                                        <td>
                                            <a class="btn btn-primary" asp-action="ChangePassword" asp-route-id="@item.Id">Change Password</a>
                                            <a class="btn btn-danger"  asp-action="ChangeRole" asp-route-id="@item.Id">Change Role</a>
                                            <a class="btn btn-dark" asp-action="Detail" asp-route-id="@item.Id">Deactivated</a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>


