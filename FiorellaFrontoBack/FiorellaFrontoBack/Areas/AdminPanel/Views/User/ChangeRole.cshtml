@model ChangeRoleViewModel
@{
    ViewData["Title"] = "ChangeRole";
}



<form class="pt-3" method="post">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="Username">Username</label>
        <input class="form-control form-control-lg border-left-0" asp-for="Username" placeholder="Email">
        <span asp-validation-for="Username"></span>
    </div>
    <div class="form-group">
        <label asp-for="OldRole">OldRole</label>
        <input class="form-control form-control-lg border-left-0" asp-for="OldRole">
        <span asp-validation-for="OldRole"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewRole">NewRole</label>
        <input class="form-control form-control-lg border-left-0" asp-for="NewRole">
        <span asp-validation-for="NewRole"></span>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">ChangeRole</button>
    </div>
    <div class="my-2 d-flex justify-content-between align-items-center">
        <a href="#" class="auth-link text-black">Forgot password?</a>
    </div>
</form>
