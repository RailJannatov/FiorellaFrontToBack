@model List<FlowerItem>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-12 stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-title">FlowerItem List</p>
                <div class="table-responsive">
                    <a class="btn btn-facebook" asp-action="Create">Create</a>
                    <table id="recent-purchases-listing" class="table">
                        <thead>
                            <tr>
                                <th style="text-align:center">Photo</th>
                                <th style="text-align:center">ExpertName</th>
                                <th style="text-align:center">ExpertProfession</th>
                                <th style="text-align:center">Actions</th>
                            </tr>

                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td> <img src="~/img/@item.ImageName" style="width:100px;height:100px;" /> </td>
                                    <td> @item.ExpertName</td>
                                    <td>@item.ExpertProfession</td>
                                    <td>
                                        <a class="btn btn-primary" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                        <a class="btn btn-dark" asp-action="Detail" asp-route-id="@item.Id">Details</a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
