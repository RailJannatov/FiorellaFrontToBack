@model FlowerItem
@{
    ViewData["Title"] = "Update";
}

<h1>Update</h1>


<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create Category</h4>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="ExpertName">ExpertName</label>
                        <input class="form-control" asp-for="ExpertName">
                        <span class="text-danger" asp-validation-for="ExpertName"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ExpertProfession">ExpertProfession</label>
                        <input class="form-control" asp-for="ExpertProfession">
                        <span class="text-danger" asp-validation-for="ExpertProfession"> </span>
                    </div>
                    <div class="form-group">
                        <p> <img src="~/img/@Model.ImageName" style="height:100px;width:100px;" /></p>
                        <label asp-for="Photo">Expert Photo</label>
                        <input class="form-control" asp-for="Photo" data-val="false">
                        <span class="text-danger" asp-validation-for="Photo"> </span>
                    </div>

                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <button class="btn btn-light" asp-action="Index">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>