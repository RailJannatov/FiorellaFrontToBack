@model FlowerItem
@{
    ViewData["Title"] = "Create";
}
<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create a New Expert</h4>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="ExpertName">ExpertName</label>
                        <input class="form-control" asp-for="ExpertName">
                        <span class="text-danger" asp-validation-for="ExpertName"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ExpertProfession">ExpertProffesion</label>
                        <input class="form-control" asp-for="ExpertProfession">
                        <span class="text-danger" asp-validation-for="ExpertProfession"> </span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Photo">Expert Photo</label>
                        <input class="form-control" asp-for="Photo">
                        <span class="text-danger" asp-validation-for="Photo"> </span>
                    </div>
                   
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <button class="btn btn-light" asp-action="Index">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>


