@model List<SliderImage>
@{
    ViewData["Title"] = "Update";
}
<div class="row">
    <div class="col-md-12 stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-title">Recent Purchases</p>
                <div class="table-responsive">
                    <a class="btn btn-primary" asp-action="Create">Create</a>
                    <table id="recent-purchases-listing" class="table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="~/img/@item.Image" style="height:100px; width:100px;" />
                                    </td>
                                    <td>
                                        <a class="btn btn-primary" asp-controller="Category" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                        <a class="btn btn-danger" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                        <a class="btn btn-dark" asp-controller="Category" asp-action="Detail" asp-route-id="@item.Id">Details</a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>